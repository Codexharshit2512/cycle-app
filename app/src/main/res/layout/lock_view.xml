<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lock_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/complete_rounded_corners"
        android:elevation="10dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        app:layout_constraintStart_toEndOf="@+id/pause_btn"
        app:layout_constraintTop_toTopOf="@+id/pause_btn"
        app:layout_constraintEnd_toStartOf="@+id/stop_btn"
        >

        <ImageView
            android:id="@+id/lock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/outline_lock_24" />
    </LinearLayout>

    <Button
        android:id="@+id/pause_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="22dp"
        android:paddingVertical="8dp"
        android:text="Pause"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingLeft="22dp"
        android:paddingRight="15dp"
        android:paddingVertical="8dp"
        android:text="STOP"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/pause_btn"
        app:layout_constraintTop_toTopOf="@+id/pause_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>